@model BasePackageModule2.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<style>
    .slider-main-area {
        display: none !important;
    }
</style>

<section id="header" style="background-color:chocolate;">
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <h1 class="text-center text-uppercase">Contact Us</h1>
        </div>
    </div>

</div>
</section>


<section id="form-area mt-5">
    <div class="container">
        <div class="row py-5">
            <div class="col-md-4 col-sm-12 col-lg-">
                
              
                    <div class="d-flex flex-column bd-highlight mb-3">
                        <div class="p-2 bd-highlight">
                            <span class="">
                                <i class="fas fa-map-marker-alt" style="color:#bda768;"></i>
                            </span>
                            <p class="justify" style="margin-left: 27px; margin-top: -25px;">
                                @Model.BusinessProfile.Address<br />
                                @Model.BusinessProfile.City   @Model.BusinessProfile.State -@Model.BusinessProfile.Pincode
                            </p>
                        </div>
                        <div class="p-2 bd-highlight">
                            <a class="text-dark" href="tel:7506340634">
                                <span class=""><i class="fas fa-phone" style="color:#bda768;"></i></span>
                                <p class="justify" style="margin-left: 27px; margin-top: -25px;">
                                  
                                  
                                        @Model.BusinessProfile.RegisteredContactNumber
                             

                                </p>
                            </a>
                        </div>
                        <div class="p-2 bd-highlight">
                            <a class="text-dark" href="@Model.BusinessProfile.EmailAddress">
                                <span class=""><i class="far fa-envelope" style="color:#bda768;"></i></span>
                                <p class="justify" style="margin-left: 27px; margin-top: -25px;">
                                    @Model.BusinessProfile.EmailAddress
                                </p>
                            </a>
                        </div>
                    </div>
  


            </div>
            <div class="col-md-8 col-sm-12 col-lg-8">
                <div class="bd-highlight">
                    <h1 class="text-center">Submit your message</h1>
                </div>
                <form asp-action="Contact" style="width:100% !important">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Company" class="control-label"></label>
                                <input asp-for="Company" class="form-control" />
                                <span asp-validation-for="Company" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Message" class="control-label"></label>
                                <textarea asp-for="Message" class="form-control"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group float-right">
                        <input type="submit" value="Send Message" class="btn " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>-